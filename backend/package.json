{
    "name": "performance-dashboard-backend",
    "version": "1.9.0",
    "description": "Performance Dashboard on AWS Backend",
    "license": "Apache-2.0",
    "awssdkUserAgent": "AwsSolution/SO0157/v",
    "scripts": {
        "test": "LOG_LEVEL=SILENT jest --coverage --watchAll",
        "test:ci": "jest --coverage --ci",
        "build": "npm run clean && tsc && npm run install:prod",
        "copy:package": "cp package.json build/",
        "install:prod": "npm run copy:package && npm install --production --prefix build",
        "local": "echo 'Run by using visual studio code instead'",
        "clean": "rm -rf build",
        "lint-src": "lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,tsx, jsx}": [
            "eslint --quiet --fix"
        ],
        "*.{json,md,html,js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.57",
        "@types/aws-sdk": "^2.7.0",
        "@types/aws-serverless-express": "^3.3.3",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.6",
        "@types/escape-html": "^1.0.2",
        "@types/express": "^4.17.6",
        "@types/http-errors": "^2.0.1",
        "@types/jest": "^27.4.0",
        "@types/node": "^16.11.7",
        "@types/pino": "^6.3.4",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^5.45.1",
        "eslint": "^8.29.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^27.4.7",
        "lint-staged": "^13.1.0",
        "ts-jest": "^27.1.3",
        "ts-node": "^8.10.2",
        "typescript": "4.8.4"
    },
    "dependencies": {
        "aws-sdk": "^2.1354.0",
        "aws-serverless-express": "^3.3.8",
        "aws-xray-sdk": "^3.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "csrf-csrf": "^2.2.4",
        "express": "^4.17.1",
        "jsonschema": "^1.4.0",
        "pino": "^6.7.0",
        "uuid": "^8.2.0"
    }
}
