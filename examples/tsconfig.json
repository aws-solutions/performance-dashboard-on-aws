{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["./src/lib/types", "node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "./package.json", "./package-lock.json"]
}
